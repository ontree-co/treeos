{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "embed-assets",
            "type": "shell",
            "command": "make",
            "args": ["embed-assets"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "build-server",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "treeos",
                "./cmd/treeos"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "dev-server",
            "type": "shell",
            "command": "make",
            "args": ["dev"],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.+?):(\\d+):(\\d+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting development server.*$",
                    "endsPattern": "^.*Build complete.*$"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "dev-debug-server",
            "type": "shell",
            "command": "make",
            "args": ["dev-debug"],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.+?):(\\d+):(\\d+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting development server in debug mode.*$",
                    "endsPattern": "^.*API server listening.*$"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "make",
            "args": ["test"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "test-e2e",
            "type": "shell",
            "command": "make",
            "args": ["test-e2e"],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "test-all",
            "type": "shell",
            "command": "make",
            "args": ["test-all"],
            "group": "test",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Install Playwright",
            "type": "shell",
            "command": "npx",
            "args": ["playwright", "install"],
            "options": {
                "cwd": "${workspaceFolder}/tests/e2e"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Playwright Tests",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/tests/e2e"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "start-test-server",
            "type": "shell",
            "command": "make",
            "args": ["build"],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Lint - All (make lint)",
            "type": "shell",
            "command": "make",
            "args": ["lint"],
            "group": "build",
            "problemMatcher": ["$go"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Lint - Go (golangci-lint)",
            "type": "shell",
            "command": "${env:HOME}/go/bin/golangci-lint",
            "args": ["run", "./..."],
            "group": "build",
            "problemMatcher": {
                "owner": "golangci-lint",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+?):(\\d+):(\\d+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Lint - Fix Issues",
            "type": "shell",
            "command": "${env:HOME}/go/bin/golangci-lint",
            "args": ["run", "./...", "--fix"],
            "group": "build",
            "problemMatcher": ["$go"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Format - Go Code",
            "type": "shell",
            "command": "go",
            "args": ["fmt", "./..."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Install Linting Tools",
            "type": "shell",
            "command": "make",
            "args": ["install-tools"],
            "group": "build",
            "problemMatcher": []
        }
    ]
}